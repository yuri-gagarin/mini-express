<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Home' %></title>
</head>
<body>
  <header>
    <h1><%= heading || 'Welcome' %></h1>
  </header>
  
  <main>
    <% if (message) { %>
      <p><%= message %></p>
    <% } %>
    
    <% if (items && items.length > 0) { %>
      <ul>
        <% items.forEach(function(item) { %>
          <li><%= item %></li>
        <% }); %>
      </ul>
    <% } %>
  </main>
  
  <footer>
    <p>&copy; <%= new Date().getFullYear() %></p>
  </footer>
</body>
</html>